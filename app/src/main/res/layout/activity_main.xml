<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/charcoal"
    tools:context=".activities.MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_100sdp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="Welcome!"
        android:textAllCaps="true"
        android:textSize="@dimen/_24sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/toolbarColor"
            android:elevation="2dp"
            android:translationZ="2dp"
            android:visibility="invisible"
            app:indicatorColor="#FFFFFF"
            app:indicatorName="BallClipRotatePulseIndicator" />

        <com.tomer.fadingtextview.FadingTextView
            android:id="@+id/fadingTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_gravity="center"
            android:padding="@dimen/_20sdp"
            android:background="@color/toolbarColor"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_150sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Students: "
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/_18ssp"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Amount Due: "
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/_18ssp"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CBSE Students:"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/_18ssp"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SSC Students:"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/_18ssp"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ICSE Students:"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/_18ssp"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Batches:"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/_18ssp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/totalStudentsCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/_18ssp"
                    />

                <TextView
                    android:id="@+id/totalAmountDue"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="2390"/>

                <TextView
                    android:id="@+id/cbseStudents"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="2"/>

                <TextView
                    android:id="@+id/sscStudents"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="2390"/>

                <TextView
                    android:id="@+id/icseStudents"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="2390"/>

                <TextView
                    android:id="@+id/totalBatches"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="2390"/>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addStudentsFab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:borderWidth="0dp"
        android:backgroundTint="@color/toolbarColor"
        android:src="@drawable/ic_baseline_person_add_24"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="2.5dp"
    android:layout_height="wrap_content"
    android:background="@color/toolbarColor">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="@color/charcoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/grpList"
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/standardStudent"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:text="7"
                android:backgroundTint="@color/golden"
                android:background="@drawable/bg_standard"
                android:textAlignment="center"
                android:textSize="@dimen/_32sdp"
                android:textColor="@color/charcoal"/>

            <LinearLayout
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_width="2dp"
                android:background="@color/boldBlack"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:paddingStart="1dp"
                    android:paddingEnd="1dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="@dimen/_18ssp"
                        android:gravity="center"
                        android:id="@+id/studentName"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aditi Tripathi"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/schoolName"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/silver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nashik Cambridge School"
                        android:textStyle="italic"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/studentWhatsApp"
                        android:background="@color/charcoal"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/whatsapplogogreen"/>

                    <ImageButton

                        android:id="@+id/studentContact"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:background="@color/charcoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_phone_24"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>